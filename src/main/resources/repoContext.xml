<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="T1" class="ua.rd.pizza.services.Test1SomeService"/>
    <bean name="T2" class="ua.rd.pizza.services.Test1SomeService"/>


    <bean name="pizzaRepository"
          class="ua.rd.pizza.repository.InMemoryPizzaRepository"
          init-method="init"
    />
    <bean name="orderRepository"
          class="ua.rd.pizza.repository.InMemoryOrderRepository"
    />
    <bean name="pizzaService"
          class="ua.rd.pizza.services.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
    <bean name="orderService"
          class="ua.rd.pizza.services.SimpleOrderService">
        <constructor-arg ref="pizzaService"/>
        <constructor-arg ref="orderRepository"/>
    </bean>

</beans>